{
  "build": {
    "builder": "railpack",
    "pythonVersion": "3.11"
  },
  "services": [
    {
      "name": "qrng-backend",
      "type": "python",
      "buildCommand": "cd backend && pip install -r requirements.txt",
      "startCommand": "cd backend && gunicorn config.wsgi:application --bind 0.0.0.0:$PORT",
      "envVars": [
        {
          "key": "PYTHONPATH",
          "value": ".."
        }
      ]
    },
    {
      "name": "qrng-frontend",
      "type": "python",
      "buildCommand": "cd frontend && pip install -r requirements.txt",
      "startCommand": "cd frontend && export BACKEND_URL=https://$RAILWAY_SERVICE_NAME-qrng-backend.up.railway.app && python run.py"
    }
  ]
}